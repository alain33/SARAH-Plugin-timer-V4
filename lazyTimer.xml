  <rule id="rulelazyTimer" scope="public">
  
	 <tag>out.action=new Object();</tag>
	 
	<one-of>
		<item>merci Sarah c'est tout<tag>out.action._attributes.context="default";out.action._attributes.tts="a ton service"</tag></item>
		<item><ruleref uri="#StartTimer"/>
			<tag>
				if (timer.hour != undefined)
					out.action.time = timer.hour  + ":";
				else 
					out.action.time = "00:";
				if (timer.mn != undefined)
					out.action.time = out.action.time + timer.mn + ":";
				else 
					out.action.time = out.action.time + "00:";
				if (timer.s != undefined)
					out.action.time = out.action.time + timer.s;
				else
					out.action.time = out.action.time + "00";
				out.action.command="startTimer";
			</tag>
		</item>
	</one-of>	

	 <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/timer"</tag>
	
